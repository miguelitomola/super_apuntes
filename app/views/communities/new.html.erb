<h2 class="communities_title">Creando comunidad</h2>

<section class="communities communities_list">

	<%= form_for @community do |f| %>

  		<h3 class="communities_title">Título:</h3>

  		<p><%= f.text_field :name, class:"community_title" %></p>

  		<h3 class="communities_title">Descripción:</h3>

  		<p><%= f.text_field :description, class:"community_text_field" %></p>

  		<%= f.submit "Crear comunidad", class:"submit_button" %>
  		<p class="button inline_block"><%= link_to "Cancelar", communities_path, class:"communities_link" %></p>

	<% end %>

</section>