<section class="communities communities_list">
	
	<h2 class="communities_title inline_block"><%= @community.name %></h2>
	<p class="inline_block verticalAlign">- <%=link_to "editar", edit_community_path, class:"communities_link" %> | <%= link_to "borrar", community_path(@community), method: :delete, data: {confirm: "Â¿Seguro que que quires eliminiar #{@community.name}?"}, class:"communities_link"%> -</p>

	<ul class="communities_notes">
		
		<h3 class="communities_notes_title inline_block">Apuntes de la comunidad</h3>
		<p class="inline_block verticalAlign"> - <%=link_to "Nueva nota", new_community_note_path(@community) %>

		<% @community.notes.each do |note| %>
			<li class="communities_notes_list">
			<p><%= link_to note.title, community_note_path(@community, note) %></p>
		</li>
		<% end %>

	</ul>

	<%= link_to "apuntes accesibles a esta comunidad", community_notes_path(@community) %>

</section>

