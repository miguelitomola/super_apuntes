<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field user_form_field">
    <%= f.label :username, "nombre de usuario", class:"user_form_label" %><br>
    <%= f.text_field :username, class:"user_form_input" %>
  </div>
  <div class="field user_form_field">
    <%= f.label :email, class:"user_form_label" %><br>
    <%= f.text_field :email, class:"user_form_input" %>
  </div>
  <div class="field user_form_field">
    <%= f.label :contraseña, class:"user_form_label" %><br>
    <%= f.password_field :password, class:"user_form_input" %>
  </div>
  <div class="field user_form_field">
    <%= f.label :confirma_contraseña, class:"user_form_label" %><br>
    <%= f.password_field :password_confirmation, class:"user_form_input" %>
  </div>
  <div class="actions user_form_field">
    <%= f.submit "Aceptar",  class:"submit_user"%>
  </div>
<% end %>
