<nav class="navigator">
	<ul class="verticalAlign">
		<li class="inline"><%=link_to "Home", root_path %></li>
		><li class="inline"><%=link_to "Notas", notes_path %></li>
		><li class="inline"><%=link_to @note.title, note_path(@note) %></li>
		><li class="inline">Edición</li>
	</ul>
</nav>

<h2 class="notes_title">Editando nota</h2>

<section class="notes notes_list">
	<%= form_for [@note] do |f| %>
		<h3 class="notes_title"><%= f.label :título %></h3>
		<p><%= f.text_field :title %></p>
		<h3 class="notes_title"><%= f.label :contenido %></h3>
		<p><%= f.text_area :body %></p>
		<p class="button"><%= f.submit "Guardar" %></p>
		<p class="button"><%= link_to "Cancelar", note_path(@note) %></p>
	<% end %>
</section>