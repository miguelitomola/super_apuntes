<nav class="navigator">
	<ul class="verticalAlign">
		<li class="inline"><%=link_to "Home", root_path %></li>
		><li class="inline"><%=link_to "Apuntes", notes_path %></li>
		><li class="inline"><%= @note.title %></li>
	</ul>
</nav>

<h1 class="notes_title"><%= @note.title %></h1>

	<% if @note.community %>

		<h3 class="notes_title">Comunidad:<%= link_to @note.community.name, community_path(@note.community_id)%></h3>	

	<% else %>

		<h3 class="notes_title">Comunidad: esta nota no pertenece a ninguna comunidad.</h3>
			
	<% end %>

	

<section class="notes notes_list">
	<p class="actions">
		<% if current_page?(note_path) %>
			- <%=link_to "editar", edit_note_path %>
		<% else %>
			- <%=link_to "editar", edit_community_note_path %>
		<% end %>
		 | 
		 <%= link_to "borrar", note_path(@note), method: :delete, data: {confirm: "Â¿Seguro que que quieres eliminiar #{@note.title}?"}%> -
	</p>

	<p class="note_body_print">
		<%= @note.body %>
	</p>
</section>