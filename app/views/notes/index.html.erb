<nav class="navigator">
	<ul class="verticalAlign">
		<li class="inline"><%=link_to "Home", root_path %></li>
		><li class="inline">Apuntes</li>
	</ul>
</nav>

<h2 class="notes_title"><%= link_to "Nueva nota", new_note_path %></h2>
<br>

<h1 class="notes_title">Últimos apuntes</h1>

<ul class="notes">

	<% if flash["new_note"] %><!-- los :símbolos y "strings" no son intercambiables en todas partes! -->
  	<div class="flash_note">
    	<%= flash["new_note"] %>
  	</div>
	<% end %>

	<% if flash["note_updated"] %>
  	<div class="flash_note">
    	<%= flash["note_updated"] %>
  	</div>
	<% end %>
	
	<% @notes.each do |note|%>
	
		<li class="notes_list">
			<% if current_page?(notes_path) %>
				<%=link_to note.title, note_path(note) %>
			<% else %>
				<%=link_to note.title, community_note_path(@community, note) %>
			<% end %> 

			<p class="actions inline_block">
				<% if current_page?(notes_path) %>
					- <%=link_to "editar", edit_note_path(note) %>
				<% else %>
					- <%=link_to "editar", edit_community_note_path(@community, note) %>
				<% end %>
				 | 
				 <% if current_page?(notes_path) %>
					<%=link_to "borrar", note_path(note), method: :delete, data: {confirm: "¿Seguro que que quieres eliminiar #{note.title}?"} %>
				<% else %>
					<%=link_to "borrar", community_note_path(@community, note), method: :delete, data: {confirm: "¿Seguro que que quieres eliminiar #{note.title}?"} %>
				<% end %> 
			</p>

		</li>

	<% end %>

</ul>
